# CORS Headers for GA4 Tracking
# Using "always" to override parent .htaccess settings

<IfModule mod_headers.c>
    # Force CORS headers even if parent .htaccess tries to override
    Header always set Access-Control-Allow-Origin "https://devwithwaqas.github.io"
    Header always set Access-Control-Allow-Methods "GET, OPTIONS, POST"
    Header always set Access-Control-Allow-Headers "Content-Type, Accept, Origin, X-Requested-With, Authorization"
    Header always set Access-Control-Allow-Credentials "false"
    Header always set Access-Control-Max-Age "86400"
</IfModule>

# Handle OPTIONS preflight requests
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>
